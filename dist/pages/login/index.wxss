page {
  background: linear-gradient(135deg, #667eea, #764ba2);
  min-height: 100vh;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  min-height: 100vh;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 160rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-tips {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 80rpx;
  width: 100%;
}

.tip-item {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 24rpx;
  text-align: left;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.login-btn {
  background-color: #ffffff;
  width: 100%;
  padding: 32rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 48rpx;
}

.login-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.login-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.login-footer {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.footer-link {
  color: #ffffff;
  text-decoration: underline;
  margin: 0 4rpx;
}
