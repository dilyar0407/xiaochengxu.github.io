page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.course-image {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.course-image-img {
  width: 100%;
  height: 100%;
  display: block;
}

.sport-type-badge {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  background-color: #FF6B35;
  color: #ffffff;
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.slot-status-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.course-info-card {
  background-color: #ffffff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.course-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.course-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
  margin-bottom: 32rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.detail-text {
  font-size: 30rpx;
  color: #666666;
}

.course-detail-card {
  background-color: #ffffff;
  margin: 0 24rpx 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.book-btn {
  background: linear-gradient(135deg, #FF6B35, #FF8C61);
  color: #ffffff;
  padding: 32rpx;
  border-radius: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999999;
}
