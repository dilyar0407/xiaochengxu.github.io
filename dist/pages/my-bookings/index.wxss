page {
  background-color: #f5f5f5;
  height: 100vh;
}

.booking-list {
  height: 100vh;
  padding: 16rpx;
}

.booking-item {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.booking-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.booking-status {
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.booking-status.confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.booking-status.pending {
  background-color: #fff7e6;
  color: #ff6b00;
}

.booking-status.cancelled {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.booking-body {
  padding: 32rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.detail-text {
  font-size: 28rpx;
  color: #666666;
}

.booking-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #eeeeee;
}

.cancel-btn {
  padding: 16rpx 32rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  color: #ff4d4f;
  background-color: #fff1f0;
}

.detail-btn {
  background: linear-gradient(135deg, #FF6B35, #FF8C61);
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}
