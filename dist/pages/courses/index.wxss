page {
  background-color: #f5f5f5;
}

.filter-bar {
  background-color: #ffffff;
  padding: 12rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.filter-header {
  margin-bottom: 8rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.filter-scroll {
  width: 100%;
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  gap: 16rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  background-color: #f0f0f0;
  color: #999999;
  font-size: 28rpx;
}

.filter-item.active {
  background: linear-gradient(135deg, #FF6B35, #FF8C61);
  color: #ffffff;
}

.course-list {
  height: calc(100vh - 120rpx);
  padding: 16rpx;
  padding-top: 120rpx;
}

.course-item {
  background-color: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.course-image {
  position: relative;
  height: 320rpx;
  overflow: hidden;
}

.course-image-img {
  width: 100%;
  height: 100%;
  display: block;
}

.sport-type-badge {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  background-color: #FF6B35;
  color: #ffffff;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.slot-status-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.course-info {
  padding: 32rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.course-detail {
  margin-bottom: 32rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.detail-text {
  font-size: 28rpx;
  color: #666666;
}

.course-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 32rpx;
  border-top: 1rpx solid #eeeeee;
}

.booked-count {
  font-size: 28rpx;
  color: #999999;
}

.detail-btn {
  background: linear-gradient(135deg, #FF6B35, #FF8C61);
  color: #ffffff;
  padding: 16rpx 48rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
}
